# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# Database Configuration
# Use either Vercel Postgres or Neon (choose one)

# Option 1: Vercel Postgres
# DATABASE_URL="postgres://username:password@hostname:port/database"
# POSTGRES_URL="postgres://username:password@hostname:port/database"
# POSTGRES_PRISMA_URL="postgres://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
# POSTGRES_URL_NON_POOLING="postgres://username:password@hostname:port/database"

# Option 2: Neon Database
# DATABASE_URL="postgresql://username:password@hostname/database?sslmode=require"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Development Tools (Optional)
# NEXT_PUBLIC_VERCEL_URL= (automatically set in Vercel)
# ANALYZE=true (for bundle analysis)

# Notes:
# - Never commit actual secret values to version control
# - Use different values for development, staging, and production
# - Keep production secrets secure in Vercel environment variables
# - Test with development/test databases only during development
